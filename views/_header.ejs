<header>
    <div id="logo">
        <h1><a href="/"><i class="fa fa-code-fork" aria-hidden="true"></i>Code <i class="fa fa-comments-o" aria-hidden="true"></i>ial</a></h1>
        <div>
            <ul id="profile-links">
                <% if (locals.user){%>
                    <li>
                        <% if(user.avatar){%>
                            <img src="<%=user.avatar %> " alt="<%= user.name %> " width="100">
                            <% }else{  %>
                                <img src="<%=user.photo %> " alt="<%= user.name %> " width="100">
                                <%} %>
                                    <!-- <img src="<%=user.photo%>"> -->
                                    <a href="/users/profile/<%= user._id%>">
                                        <%=user.name%>
                                    </a>
                    </li>
                    <li>
                        <a href="/users/sign-out">Sign Out</a>
                    </li>

                    <% } else{%>
                        <li>
                            <a href="/users/sign-in">Sign In</a>
                        </li>
                        <li>
                            <a href="/users/sign-up">Sign Up</a>
                        </li>

                        <%}%>
            </ul>
        </div>
    </div>
</header>