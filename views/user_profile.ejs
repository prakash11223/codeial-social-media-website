<link rel="stylesheet" href="/css/user_profile.css">
<div id="profile-container">
    <% if(profile_user.avatar){%>
        <img src="<%=profile_user.avatar %> " alt="<%= profile_user.name %> " width="100">
        <% }else{  %>
            <img src="<%=profile_user.photo %> " alt="<%= profile_user.name %> " width="100">
            <%} %>
                <!-- <p class="user-name">
                    <%= profile_user.name%>
                </p>
                <p class="user-name">
                    <%= profile_user.email%> -->
                </p>

                <% if(user.id == profile_user.id){ %>
                    <!-- if user matches then show the form -->
                    <!-- <%=profile_user.avatar %> -->
                    <div id="updateform">
                        <p class="user-name">
                            <%= profile_user.name%>
                        </p>
                        <p class="user-name">
                            <%= profile_user.email%>
                                <form action="/users/update/<%= profile_user.id%>" enctype="multipart/form-data" method="Post">
                                    <input type="text" name="name" placeholder="Your Name" value="" required>
                                    <input type="email" name="email" placeholder="Your email" value="" required><br>

                                    <input type="file" name="avatar" value="<%= profile_user.avatar %> " id="choosefile" placeholder="your picture"><br>
                                    <input type="submit" value="update">
                                </form>
                    </div>
                    <% } else { %>
                        <!-- else show profile info -->
                        <p class="user-name">
                            <%= profile_user.name  %>
                        </p>
                        <p class="user-name">
                            <%= profile_user.email%>
                        </p>
                        <%}%>
                            <script src="/js/preview.js"></script>
</div>